{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": [
        "displayName",
        "email"
      ]
    },
    "product": {
      "title": "Product",
      "description": "Represents a product in the store, which can be a cat or a pet product.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the product."
        },
        "type": {
          "type": "string",
          "enum": [
            "cat",
            "pet_product"
          ],
          "description": "The type of product."
        },
        "category": {
          "type": "string",
          "enum": [
            "food",
            "toys",
            "litter",
            "accessories",
            "siamese",
            "persian",
            "sphynx"
          ],
          "description": "The category of the product."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the product."
        },
        "price": {
          "type": "number",
          "description": "The price of the product."
        },
        "currency": {
          "type": "string",
          "description": "The currency of the price (e.g., PKR)."
        },
        "stockQuantity": {
          "type": "integer",
          "description": "The quantity of the product in stock."
        },
        "mainImageUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the main product image."
        },
        "galleryImageUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "A list of URLs for gallery images."
        },
        "isFeatured": {
          "type": "boolean",
          "description": "Whether the product is featured on the homepage."
        },
        "isListed": {
          "type": "boolean",
          "description": "Whether the product is listed and visible in the shop."
        },
        "ratingAverage": {
          "type": "number",
          "description": "The average rating of the product."
        },
        "ratingCount": {
          "type": "integer",
          "description": "The number of ratings the product has received."
        }
      },
      "required": [
        "name",
        "type",
        "category",
        "description",
        "price",
        "currency",
        "stockQuantity",
        "mainImageUrl"
      ]
    },
    "deliveryInfo": {
      "title": "Delivery Information",
      "description": "Represents the delivery details for an order.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Recipient's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Recipient's email address."
        },
        "phone": {
          "type": "string",
          "description": "Recipient's phone number."
        },
        "addressLine1": {
          "type": "string",
          "description": "The primary address line."
        },
        "addressLine2": {
          "type": "string",
          "description": "The optional secondary address line."
        },
        "city": {
          "type": "string",
          "description": "The city for delivery."
        },
        "postalCode": {
          "type": "string",
          "description": "The postal code for the delivery address."
        }
      },
      "required": [
        "name",
        "email",
        "phone",
        "addressLine1",
        "city",
        "postalCode"
      ]
    },
    "order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "userId": {
          "type": [
            "string",
            "null"
          ],
          "description": "The ID of the user who placed the order. Null for guest checkouts."
        },
        "items": {
          "type": "array",
          "description": "A list of items included in the order.",
          "items": {
            "type": "object",
            "properties": {
              "productId": {
                "type": "string"
              },
              "productName": {
                "type": "string"
              },
              "quantity": {
                "type": "integer"
              },
              "unitPrice": {
                "type": "number"
              },
              "subtotal": {
                "type": "number"
              },
              "mainImageUrl": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "productId",
              "productName",
              "quantity",
              "unitPrice",
              "subtotal",
              "mainImageUrl"
            ]
          }
        },
        "totalAmount": {
          "type": "number",
          "description": "The total cost of the order."
        },
        "currency": {
          "type": "string",
          "description": "The currency of the order total (e.g., PKR)."
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "confirmed",
            "shipped",
            "delivered",
            "cancelled"
          ],
          "description": "The current status of the order."
        },
        "deliveryInfo": {
          "$ref": "#/entities/deliveryInfo"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "items",
        "totalAmount",
        "currency",
        "status",
        "deliveryInfo",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores public user profile data."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/product"
      },
      "description": "Stores all product data for the e-commerce store."
    },
    "/orders/{orderId}": {
      "schema": {
        "$ref": "#/entities/order"
      },
      "description": "Stores all customer orders."
    }
  }
}